mixin button(options)
  - let className = 'button '
  - if (options.modificator) {
  -   className = className + options.modificator
  - }
  div(class=className)
    p(class='button__placeholder')= options.placeHolder
    - if (options.arrow) {
      img(src='public/arrowWhite.svg', height='24', width='24')
    - }
